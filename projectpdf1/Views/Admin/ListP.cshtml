@model IEnumerable<projectpdf1.Models.Project>

@{
    ViewBag.Title = "List Project";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>List Project</h2>

<p>
    @Html.ActionLink("Create New", "Addproject", "", new { @class = "btn btn-warning" })
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.User_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Onprog_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Post_content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Post_name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.User_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.State_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Onprog_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Post_content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Post_name)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditList", new {id = item.Project_Id}) |
             
                @Html.ActionLink("Delete", "Deleteproject", new { id = item.Project_Id  })
            </td>
        </tr>
    }

</table>
