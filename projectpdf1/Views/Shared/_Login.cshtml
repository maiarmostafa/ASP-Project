<div id="modal-contianer" class="modal fade" tabindex="-1" role="dialog" style="border:5px solid #3A87AD">
    <div class="modal-dialog">

        <!-- <a href="#close" title="close" class="modal-close-btn">X</a>-->
        <div class="modal-content" style="width:500px !important; margin:10px auto !important">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                Login Form
            </div>
            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
            {
                <div class="modal-body">
                    <div class="form-group">
                        @Html.LabelFor(x => x.U_Email)
                        @Html.TextBoxFor(x => x.U_Email, new { @class = "form-control", id = "UserName", placeholder = "Example@email.com", type = "email", required = "true" })
                        @Html.ValidationMessageFor(x => x.U_Email, "", new { @class = "MessageError" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.U_Password)
                        @Html.TextBoxFor(x => x.U_Password, new { @class = "form-control", id = "Password", placeholder = "Password", type = "password" })
                        @Html.ValidationMessageFor(x => x.U_Password, "", new { @class = "MessageError" })
                    </div>
                </div>
                <div class="line line2"></div>
                <div class="modal-footer" id="Login">
                    <input type="submit" class="center-block hi btn btn-sm btn-warning" value="Login">
                    @*@Html.ActionLink("You Don't Have An Account ? Register Now!", "Register", "Home", new { @class = "center-block btn btn-sm btn-warning" })*@
                   
                    <button class="btm btn-warning pull-right" style="margin:10px" onclick="OpenRegsiterModal()"> You Don't Have An Account ? Register Now! </button>

                </div>
            }
        </div>
    </div>
</div>
<style>
    .error {
        text-align: center;
        font-weight: bold;
        font-family: "Times New Roman";
        color: white;
        background: #d1a3a3;
    }

    .myimg {
        display: block;
        margin-left: auto;
        margin-right: auto;
    }
</style>
